<%= stylesheet_link_tag 'clientes/clientes_edit', media: 'all' %>
<h1>Editar Datos del Cliente</h1>
<%= form_with model: @cliente, local: true do |form| %>  <!-- Crea un formulario y los llena con los datos del cliente a editar -->
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>
  <div>
    <%= form.label :apellido %>
    <%= form.text_field :apellido %>
  </div>
  <div>
    <%= form.label :telefono %>
    <%= form.text_field :telefono %>
  </div>
  <div>
    <%= form.label :dni %>
    <%= form.text_field :dni %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.submit "Actualizar" %>
  </div>
<% end %>
