<%= stylesheet_link_tag 'clientes/clientes_new', media: 'all' %>   <!-- enlace a estilos -->

<h1>Registrar Nuevo Cliente</h1>

<%= form_with(model: @cliente, local: true) do |form| %>   <!-- Inicia un nuevo formulario para guardar en cliente -->
  

  <div class="form-group">             <!-- Campos del formulario -->
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <div class="form-group">     
    <%= form.label :apellido %>
    <%= form.text_field :apellido, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :telefono %>
    <%= form.text_field :telefono, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dni %>
    <%= form.text_field :dni, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="actions">                 <!-- Enviar formulario -->
    <%= form.submit 'Registrar Cliente', class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Volver a la lista de Clientes', clientes_path, class: "btn btn-secondary" %>
